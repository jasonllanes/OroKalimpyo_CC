<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/white"
    android:background="@color/white"
    app:cardElevation="8dp"
    android:elevation="10dp"
    android:layout_margin="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:fontFamily="@font/pregular"
                android:text="Segregation ID: [Loading]"
                android:textStyle="bold"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/tvDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/green"
                android:fontFamily="@font/pregular"
                android:text="Date and Time: [Loading]"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/tvWasteType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/pregular"
                android:text="Waste Type: [Loading]"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/tvPlasticType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/pregular"
                android:text="Plastic Type: [Loading]"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/tvPlasticName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Plastic Name: [Loading]"
                android:fontFamily="@font/pregular"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/tvBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Brand: [Loading]"
                android:fontFamily="@font/pregular"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/tvKilo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/pregular"
                android:text="Total Kilo: [Loading]"
                android:textSize="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity=""
            android:orientation="vertical"/>


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/green"/>


</LinearLayout>