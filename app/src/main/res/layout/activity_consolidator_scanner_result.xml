                        android:fontFamily="@font/pmedium"
                        android:layout_marginHorizontal="15dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Collector Type: "
                        android:textColor="@color/black"
