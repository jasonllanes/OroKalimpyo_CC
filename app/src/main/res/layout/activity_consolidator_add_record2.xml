<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".records.consolidator_add_record_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/back"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:text="Add Record"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:fontFamily="@font/pbold"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollIndicators="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvPlasticWaste"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"

                    android:backgroundTint="@color/white"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="Type of Waste:"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:fontFamily="@font/pbold"
                            android:layout_marginLeft="5dp"/>

                        <TextView
                            android:id="@+id/tvWasteType"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Plastic Waste"
                            android:textSize="20dp"
                            android:textColor="@color/green"
                            android:layout_marginHorizontal="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="Type of Plastic Waste:"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:fontFamily="@font/pbold"
                            android:layout_marginTop="15dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_layout"
                            android:padding="2dp"
                            android:layout_marginHorizontal="10dp">
                            <com.jaredrummler.materialspinner.MaterialSpinner
                                android:id="@+id/sPlasticWasteType"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:ms_padding_left="10dp"
                                android:textSize="17dp"
                                android:gravity="left"
                                android:textColorHint="@color/grey"
                                app:ms_hint_color="@color/grey"
                                app:ms_arrow_tint="@color/black"
                                android:textColor="@color/green" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/etOtherTypes"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Please specify..."
                            android:visibility="gone"
                            android:layout_marginTop="10dp"
                            android:textColorHint="@color/grey"
                            android:background="@drawable/edit_text_layout"
                            android:padding="15dp"
                            android:backgroundTint="@color/green"
                            android:inputType="text"
                            android:textColor="@color/green"
                            android:layout_marginHorizontal="10dp"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="Name of Plastic Waste:"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:fontFamily="@font/pbold"
                            android:layout_marginTop="15dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_layout"
                            android:padding="2dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginHorizontal="10dp">
                            <com.jaredrummler.materialspinner.MaterialSpinner
                                android:id="@+id/sPlasticWasteName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:ms_padding_left="10dp"
                                android:textSize="17dp"
                                android:gravity="left"
                                android:textColorHint="@color/grey"
                                app:ms_hint_color="@color/grey"
                                app:ms_arrow_tint="@color/black"
                                android:textColor="@color/green" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/etOtherName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Please specify..."
                            android:visibility="gone"
                            android:layout_marginTop="10dp"
                            android:textColorHint="@color/grey"
                            android:background="@drawable/edit_text_layout"
                            android:padding="15dp"
                            android:backgroundTint="@color/green"
                            android:inputType="text"
                            android:textColor="@color/green"
                            android:layout_marginHorizontal="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="Brand:"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:fontFamily="@font/pbold"
                            android:layout_marginTop="15dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_layout"
                            android:padding="2dp"
                            android:layout_marginHorizontal="10dp">
                            <com.jaredrummler.materialspinner.MaterialSpinner
                                android:id="@+id/sBrand"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:ms_padding_left="10dp"
                                android:textSize="17dp"
                                android:gravity="left"
                                android:textColorHint="@color/grey"
                                app:ms_hint_color="@color/grey"
                                app:ms_arrow_tint="@color/black"
                                android:textColor="@color/green" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/etOtherBrand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Please specify..."
                            android:visibility="gone"
                            android:layout_marginTop="10dp"
                            android:textColorHint="@color/grey"
                            android:background="@drawable/edit_text_layout"
                            android:padding="15dp"
                            android:backgroundTint="@color/green"
                            android:inputType="text"
                            android:textColor="@color/green"
                            android:layout_marginHorizontal="10dp"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="Kilo:"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:fontFamily="@font/pbold"
                            android:layout_marginTop="15dp" />

                        <EditText
                            android:id="@+id/etKilo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Kilo"
                            android:textColorHint="@color/grey"
                            android:padding="15dp"
                            android:background="@drawable/edit_text_layout"
                            android:inputType="number"
                            android:textColor="@color/green"
                            android:layout_marginHorizontal="10dp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cvOther"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    android:visibility="gone"
                    android:backgroundTint="@color/white"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="Type of Waste:"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:fontFamily="@font/pbold"
                            android:layout_marginLeft="5dp"/>

                        <TextView
                            android:id="@+id/tvWasteTypeO"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="[Waste Type]"
                            android:textSize="20dp"
                            android:textColor="@color/green"
                            android:layout_marginHorizontal="10dp"/>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="Brand:"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:fontFamily="@font/pbold"
                            android:layout_marginTop="15dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_layout"
                            android:padding="2dp"
                            android:layout_marginHorizontal="10dp">
                            <com.jaredrummler.materialspinner.MaterialSpinner
                                android:id="@+id/sBrandO"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:ms_padding_left="10dp"
                                android:textSize="17dp"
                                android:gravity="left"
                                android:textColorHint="@color/grey"
                                app:ms_hint_color="@color/grey"
                                app:ms_arrow_tint="@color/black"
                                android:textColor="@color/green" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/etOtherBrandO"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Please specify..."
                            android:visibility="gone"
                            android:layout_marginTop="10dp"
                            android:textColorHint="@color/grey"
                            android:background="@drawable/edit_text_layout"
                            android:padding="15dp"
                            android:backgroundTint="@color/green"
                            android:inputType="text"
                            android:textColor="@color/green"
                            android:layout_marginHorizontal="10dp"/>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="10dp"
                            android:text="Kilo:"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:fontFamily="@font/pbold"
                            android:layout_marginTop="15dp" />

                        <EditText
                            android:id="@+id/etKiloO"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Kilo"
                            android:textColorHint="@color/grey"
                            android:padding="15dp"
                            android:background="@drawable/edit_text_layout"
                            android:inputType="number"
                            android:textColor="@color/green"
                            android:layout_marginHorizontal="10dp"/>





                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NEXT >"
                    android:fontFamily="@font/pbold"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    app:backgroundTint="@color/green"
                    app:cornerRadius="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"/>

            </LinearLayout>

        </ScrollView>




    </LinearLayout>


</LinearLayout>