                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pmedium"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Consolidator Name: "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pbold"
                        android:layout_marginTop="13dp"
                        android:layout_marginHorizontal="15dp" />


                    <TextView
                        android:id="@+id/tvConsolidatorNameO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[Consolidator Name]"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pmedium"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date and Time: "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pbold"
                        android:layout_marginTop="13dp"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:id="@+id/tvDateTimeO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[Date Time]"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pmedium"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Waste Type: "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pbold"
                        android:layout_marginTop="13dp"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:id="@+id/tvWasteTypeO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[Waste Type]"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pmedium"
                        android:layout_marginHorizontal="15dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Brand: "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pbold"
                        android:layout_marginTop="13dp"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:id="@+id/tvBrandO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[Brand]"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pmedium"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kilo: "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pbold"
                        android:layout_marginTop="13dp"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:id="@+id/tvKiloO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[Kilo]"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pmedium"
                        android:layout_marginHorizontal="15dp" />


                </LinearLayout>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/pbLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/green"
                android:layout_gravity="center"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Data"
                android:textSize="15sp"
                android:padding="15dp"
                app:cornerRadius="25dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/green"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"

                android:backgroundTint="@color/green"
                android:layout_marginHorizontal="50dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textSize="15sp"
                android:padding="15dp"
                app:cornerRadius="25dp"
                app:strokeWidth="2dp"
                app:strokeColor="@color/green"
                android:textColor="@color/green"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="50dp" />


        </LinearLayout>

    </ScrollView>
</LinearLayout>