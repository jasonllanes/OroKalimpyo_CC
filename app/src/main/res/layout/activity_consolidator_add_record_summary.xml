<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".records.consolidator_add_record_summary">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_person"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Summary"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="@font/pbold"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">





            <LinearLayout
                android:id="@+id/llPlastic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:visibility="gone"
                android:background="@drawable/card_layout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Segregation ID: "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pbold"
                        android:layout_marginTop="13dp"
                        android:layout_marginHorizontal="15dp" />


                    <TextView
                        android:id="@+id/tvSegregationId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[Segregation ID]"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pmedium"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Consolidator ID: "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pbold"
                        android:layout_marginTop="13dp"
                        android:layout_marginHorizontal="15dp" />


                    <TextView
                        android:id="@+id/tvConsolidatorId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[Consolidator ID]"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pmedium"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Consolidator Name: "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pbold"
                        android:layout_marginTop="13dp"
                        android:layout_marginHorizontal="15dp" />


                    <TextView
                        android:id="@+id/tvConsolidatorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[Consolidator Name]"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pmedium"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date and Time: "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pbold"
                        android:layout_marginTop="13dp"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:id="@+id/tvDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[Date Time]"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pmedium"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Waste Type: "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pbold"
                        android:layout_marginTop="13dp"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:id="@+id/tvWasteType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[Waste Type]"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pmedium"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plastic Type: "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pbold"
                        android:layout_marginTop="13dp"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:id="@+id/tvPlasticType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[Plastic Type]"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pmedium"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plastic Waste Name: "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pbold"
                        android:layout_marginTop="13dp"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:id="@+id/tvPlasticWasteName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[Plastic Waste Name]"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pmedium"
                        android:layout_marginHorizontal="15dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Brand: "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pbold"
                        android:layout_marginTop="13dp"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:id="@+id/tvBrand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[Brand]"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pmedium"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kilo: "
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pbold"
                        android:layout_marginTop="13dp"
                        android:layout_marginHorizontal="15dp" />

                    <TextView
                        android:id="@+id/tvKilo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[Kilo]"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:fontFamily="@font/pmedium"
                        android:layout_marginHorizontal="15dp" />


                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:id="@+id/llOther"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:visibility="gone"
                android:background="@drawable/card_layout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
